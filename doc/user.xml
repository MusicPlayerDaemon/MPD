      <section>
        <title><varname>lastfm</varname></title>

        <para>
          Plays last.fm radio.
        </para>

        <informaltable>
          <tgroup cols="2">
            <thead>
              <row>
                <entry>Setting</entry>
                <entry>Description</entry>
              </row>
            </thead>
            <tbody>
              <row>
                <entry>
                  <varname>user</varname>
                  <parameter>USERNAME</parameter>
                </entry>
                <entry>
                  The last.fm user name.
                </entry>
              </row>
              <row>
                <entry>
                  <varname>password</varname>
